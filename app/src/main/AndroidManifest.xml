<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.risingproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".config.ApplicationClass"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.RisingProject">
        <activity
            android:name=".src.splash.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".src.main.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".src.login.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".src.signup.SignupOneActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".src.search.SearchActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".src.detailInto.DetailInfoActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>


        <activity
            android:name=".src.recommendinfo.CustomRecommendInfoActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".src.emailLogin.EmailLoginActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>
    </application>

</manifest>
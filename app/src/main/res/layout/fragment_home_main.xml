<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <com.example.risingproject.util.NestedScrollableHost
                android:id="@+id/NestedScrollableHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager_homemain_fragment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.example.risingproject.util.NestedScrollableHost>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="@id/NestedScrollableHost"
                app:layout_constraintBottom_toBottomOf="@+id/NestedScrollableHost"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:padding="3dp"
                android:background="@drawable/gray_ellipse">
                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/tv_viewpager_homemain_fragment_nownum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:drawableRight="@drawable/ic_baseline_white_add_12"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/tv_viewpager_homemain_fragment_totalnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.example.risingproject.util.ExpandableHeightGridView
            android:numColumns="4"
            android:id="@+id/gridview_homemain_pages"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#f7f8fa"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_home_main_temp1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="인기 동영상"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/tv_home_main_temp1"
                app:layout_constraintStart_toStartOf="parent"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_14"
                android:text="매일 1, 2, 3위에게 최대 4000P 지급!"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:drawableLeft="@drawable/img_camera_main"
                android:drawablePadding="3dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="6dp"
                android:background="@drawable/main_stroke_btn2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="올리기"
                android:textColor="@color/main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/home_vid_scroll"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_vid1"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_vid2"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_vid3"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_vid4"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_vid5"
                    />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_marginBottom="15dp"
            android:text="인기 동영상 더보기"
            android:textColor="#5C5B5B"
            android:textSize="18dp"
            android:textStyle="bold"
            android:backgroundTint="@color/softGray"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#f7f8fa"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_home_main_temp2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="인기 사진"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/tv_home_main_temp2"
                app:layout_constraintStart_toStartOf="parent"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_14"
                android:text="매일 1, 2, 3위에게 최대 1000P 지급!"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/btn_upload_pic_main"
                android:drawableLeft="@drawable/img_camera_main"
                android:drawablePadding="3dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="6dp"
                android:background="@drawable/main_stroke_btn2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="올리기"
                android:textColor="@color/main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_best_pic"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="인기사진 더보기"
            android:textColor="#5C5B5B"
            android:textStyle="bold"
            android:backgroundTint="@color/softGray"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#f7f8fa"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:background="@drawable/gridview_item_bg"
        android:id="@+id/gridview_page_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_nav_home_notselected"/>
    <TextView
        android:id="@+id/gridview_message"
        android:layout_marginTop="-5dp"
        android:textStyle="bold"
        android:paddingVertical="2dp"
        android:paddingHorizontal="5dp"
        android:text="HOT"
        android:textColor="@color/white"
        android:background="@drawable/special_text_bg"
        app:layout_constraintTop_toTopOf="@id/gridview_page_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/blackForText"

        android:id="@+id/gridview_page_name"
        app:layout_constraintTop_toBottomOf="@+id/gridview_page_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쇼핑하기"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
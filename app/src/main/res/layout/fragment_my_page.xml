<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways">

            <androidx.appcompat.widget.Toolbar
                android:background="@drawable/bottom_boarder"
                android:id="@+id/toolbar_mypage"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"
                >
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_home_fragment"
        android:layout_gravity="center"
        app:tabUnboundedRipple="true"
        app:tabRippleColor="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorColor="@color/main"
        app:tabSelectedTextColor="@color/main"
        app:tabTextColor="@color/black"
        app:tabGravity="center"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
    />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/card_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/profile_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_no_profile"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:id="@+id/profile_nickname"
                    android:textSize="20dp"
                    android:text="김재정"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/card_1"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:paddingEnd="15dp"
                    android:id="@+id/profile_temp1"
                    android:text="팔로워 0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/card_1"
                    app:layout_constraintTop_toBottomOf="@+id/profile_nickname"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/profile_temp2"
                    android:background="@drawable/left_boarder"
                    android:text="팔로우 0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/profile_temp1"
                    app:layout_constraintTop_toBottomOf="@+id/profile_nickname"/>

                <ImageView
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_temp1"
                    app:layout_constraintStart_toEndOf="@+id/card_1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_5000p"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingBottom="10dp"
                android:background="@drawable/bottom_boarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative_alram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/relative_bookmark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:src="@drawable/ic_menu_alram"
                        android:id="@+id/img_alram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_alram"
                        android:layout_centerHorizontal="true"
                        android:text="알림"
                        android:textAlignment="center"
                        android:textSize="13dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/relative_alram"
                    app:layout_constraintEnd_toStartOf="@+id/relative_heart">

                    <ImageView
                        android:src="@drawable/img_bookmark"
                        android:id="@+id/img_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_bookmark"
                        android:layout_centerHorizontal="true"
                        android:text="스크랩 0"
                        android:textAlignment="center"
                        android:textSize="13dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/relative_bookmark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:src="@drawable/ic_menu_heart"
                        android:id="@+id/img_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_heart"
                        android:layout_centerHorizontal="true"
                        android:text="좋아요 0"
                        android:textAlignment="center"
                        android:textSize="13dp" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="나의 쇼핑"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:background="@drawable/nemo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/relative_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tv_1"
                        android:text="0"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_1"
                        android:layout_centerHorizontal="true"
                        android:text="진행중 주문"
                        android:textAlignment="center"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/relative_1"
                    app:layout_constraintEnd_toStartOf="@+id/relative_3">

                    <TextView
                        android:id="@+id/tv_2"
                        android:text="0"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_2"
                        android:layout_centerHorizontal="true"
                        android:text="내 쿠폰"
                        android:textAlignment="center"
                        android:textSize="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/relative_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tv_3"
                        android:text="1000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_3"
                        android:layout_centerHorizontal="true"
                        android:text="내 포인트"
                        android:textAlignment="center"
                        android:textSize="10dp" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:background="@drawable/bottom_boarder"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:background="@color/white"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="사진"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="5dp"
                    android:background="@color/white"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:textSize="15dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:paddingStart="10dp"
                android:text="우리 집의 변화를 공간별로 기록하고 모아볼 수 있어요."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:paddingHorizontal="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_back_mypage"
                android:layout_width="match_parent"
                android:layout_height="380dp"/>
            <FrameLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:backgroundTint="@color/main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawablePadding="5dp"
                    android:elevation="5dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="사진,동영상 올리기"
                    android:drawableLeft="@drawable/img_camera_white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <com.example.risingproject.util.NestedScrollableHost
                    android:id="@+id/NestedScrollableHost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewpager_homemain_fragment"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.example.risingproject.util.NestedScrollableHost>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintRight_toRightOf="@id/NestedScrollableHost"
                    app:layout_constraintBottom_toBottomOf="@+id/NestedScrollableHost"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="3dp"
                    android:background="@drawable/gray_ellipse">
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/tv_viewpager_homemain_fragment_nownum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="10dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="10dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:drawableRight="@drawable/ic_baseline_white_add_12"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/tv_viewpager_homemain_fragment_totalnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="10dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/top_boarder"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="집들이"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/top_boarder"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="노하우"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/top_boarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="질문과답변"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:textSize="15dp"
                    android:text="0"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/top_boarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="최근 본"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:textSize="15dp"
                    android:text="0"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/top_boarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="리뷰쓰기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:textSize="15dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <Button
                    android:gravity="center"
                    android:backgroundTint="@color/main"
                    android:text="리뷰쓰기"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_my_review"
                android:background="@drawable/top_boarder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="리뷰"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingVertical="10dp"
                    android:paddingStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:textSize="15dp"
                    android:text="1"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/top_boarder"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="고객센터"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/button_change_counter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_page_btn_counting_number"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
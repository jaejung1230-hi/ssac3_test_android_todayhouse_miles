<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingHorizontal="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:strokeWidth="1dp"
        app:strokeColor="@color/softGray"
        android:id="@+id/container_filter_category_horizontal_color"
        android:layout_marginEnd="15dp"
        android:layout_marginVertical="3dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:scaleType="center"
            android:id="@+id/filter_category_horizontal_color"
            android:padding="5dp"
            android:src="@drawable/color_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/filter_category_horizontal_color_check"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_check_white_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>